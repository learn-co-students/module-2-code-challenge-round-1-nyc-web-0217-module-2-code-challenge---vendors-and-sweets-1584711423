<%if flash[:errors]%>
<%flash[:errors].each do |error|%>
    <li><%=error%></li>
    <%end%>
    <%end%>

<%=form_for @vendor_sweet do |f|%>
    <%=f.label :vendor_id%>
    <%=f.collection_select :vendor_id, @vendor, :id, :name%>

    <%=f.label :sweet_id%>
    <%=f.collection_select :sweet_id, @sweet, :id, :name%>

    <%=f.label :price%>
    <%=f.text_field :price%>

    <%=f.submit%>

    <%end%>